<?xml version="1.0" encoding="utf-8"?>
<modification>
    <name>Admin Filter Resets</name>
    <code>admin_filter_reset</code>
    <version>0.1.0</version>
    <author>Webiggle Team</author>
    <link>https://store.webiggle.com/</link>
    
    <!-- Add Button -->
    <file path="admin/view/template/{catalog,sale,customer,marketing}/{product_list,order_list,return_list,recurring_list,customer_list,marketing_list}.twig">
        <operation error="skip">
            <search><![CDATA[<button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>]]></search>
            <add position="after"><![CDATA[<button type="button" id="button-reset" class="btn btn-danger"><i class="fa fa-undo"></i> {{ button_reset }}</button>]]></add>
        </operation>
    </file>

    <!-- Add Button logic -->
    <file path="admin/view/template/common/footer.twig">
        <operation error="skip">
            <search><![CDATA[<footer id="footer">]]></search>
            <add position="before"><![CDATA[
            <script type="text/javascript"><!--
                $('#button-reset').on('click', function() {
                    $(this).closest('[id^=filter]').find("input").val("");
                    $(this).closest('[id^=filter]').find("select").each(function(index, element) {
                        $(element).find('option:eq(0)').prop('selected', true);
                    });
                });
            //--></script>
            ]]></add>
        </operation>
    </file>
</modification>
              
              
